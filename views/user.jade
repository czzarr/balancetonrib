extends layouts/main

block content
  .row
    .col-sm-4
      .user
        img.profile-pic-big(src=friend.pic_big, alt=friend.name)
        h2= friend.name
    .col-sm-8
      h1 RIB
      .ribs
        if (ribs.length > 0)
            .rib
              table.table
                thead
                  tr
                    th Code Banque
                    th Code Guichet
                    th Numéro de Compte
                    th Clé RIB
                tbody
                  each rib in ribs
                    tr
                      td #{rib.bank}
                      td #{rib.counter}
                      td #{rib.accountNumber}
                      td #{rib.key}
                      if (me)
                        td
                          a(href='/ribs/delete/#{rib._id}') Supprimer
        else
          p Pas de RIB, c'est balo.
          div 
            if (me)
              a.btn.btn-primary(href='/ribs/add') Ajouter un RIB
            else
              button.btn.btn-primary Invitez #{friend.name} à renseigner son RIB


